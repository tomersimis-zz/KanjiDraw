<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/level_bg"
    tools:context="br.ufpe.cin.writejapanese.KanjiLevelActivity$PlaceholderFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fácil"
        android:id="@+id/easy_bt"
        android:singleLine="false"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:textSize="20dp"
        android:layout_above="@+id/medium_bt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Médio"
        android:id="@+id/medium_bt"
        android:singleLine="false"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/easy_bt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difícil"
        android:id="@+id/hard_bt"
        android:singleLine="false"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:textSize="20dp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/medium_bt"
        android:layout_alignEnd="@+id/medium_bt" />

</RelativeLayout>
